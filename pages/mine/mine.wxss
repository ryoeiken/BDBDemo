.headPic {
  width: 100%;
  height: 300rpx;
  background-color: #6cf;
  position: relative;
}

.headPic image {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  box-shadow: 0px 0px 100rpx #fff;
}

.options {
  margin: 30rpx 0;
